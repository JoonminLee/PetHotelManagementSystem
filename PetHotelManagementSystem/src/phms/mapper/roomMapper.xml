<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="phms.mapper.RoomMapper">
	<select id="selectOneRoom" resultType="room">
		select * from
		room where
		r_num = #{rNum}
	</select>
	<select id="selectAllRoom" resultType="room">
		select * from room
	</select>
	<select id="selectAllAvailable">
		select * from room where r_status = #{rStatus}
	</select>
	<insert id="insertRoom">
		insert into room (r_num, r_s_num, r_status)
		values(0, #{rSNum}, #{rStatus})
	</insert>
	<update id="updateRoom">
		update room set r_s_num=#{rSNum}, r_status=#{rStatus}
		where
		r_num=#{rNum}
	</update>
	<delete id="deleteRoom">
		delete from room where r_num=#{rNum}
	</delete>
</mapper>